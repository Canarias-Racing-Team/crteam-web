---
import type { StatType } from "@types";

const {
  stats = [
    { title: "Islas", value: "8" },
    { title: "Colores", value: "3", color: "secondary" },
    { title: "Coche", value: "1", color: "primary" },
  ],
  className,
}: { stats?: StatType[]; className?: string } = Astro.props;
---

<div
  class={`flex flex-row justify-evenly gap-4 p-4 md:p-6 bg-base-300 rounded-box self-center items-center ${className || ""}`}
  style="justify-content: center;"
>
  {
    stats.map((stat) => (
      <div class="flex-1 flex flex-col items-center justify-center text-center h-full">
        <div class="text-lg font-medium text-base-content">{stat.title}</div>
        <div
          class={`text-2xl font-bold ${stat.color ? `text-${stat.color}` : "text-base-content"}`}
        >
          {stat.value}
        </div>
      </div>
    ))
  }
</div>

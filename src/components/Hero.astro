---
import Buttons from "./Buttons.astro";

const buttons = [
  {
    text: "Quiero Patrocinar",
    href: "#partners",
    icon: "mdi:account-multiple-plus",
  },
  {
    text: "Únete al Equipo",
    href: "#team",
    icon: "mdi:account-plus",
  },
];
---

<div
  id={Astro.self.name}
  class="hero min-h-screen relative"
  style="
    background-image:
      radial-gradient(circle at center, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.7) 80%),
      url(https://img.daisyui.com/images/stock/photo-1507358522600-9f71e620c44e.webp);
  "
>
  <div class="hero-overlay bg-opacity-70"></div>
  <div
    class="hero-content text-neutral-content text-center flex flex-col gap-2 md:gap-4 items-center justify-evenly"
  >
    <h1
      class="hero-title text-4xl md:text-6xl lg:text-8xl font-black drop-shadow-lg w-full flex justify-center items-center"
    >
      <div
        class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-8 w-full"
      >
        <!-- Layout móvil: lectura coherente -->
        <div class="flex md:hidden flex-col items-center text-center gap-2">
          <div class="flex gap-3">
            <span class="text-white leading-none font-black tracking-wider"
              >OCHO</span
            >
            <span
              class="text-outline-white leading-none font-black tracking-wider"
              >ISLAS</span
            >
          </div>
          <div class="flex gap-3">
            <span class="text-secondary leading-none font-black tracking-wider"
              >TRES</span
            >
            <span
              class="text-outline-primary leading-none font-black tracking-wider"
              >COLORES</span
            >
          </div>
        </div>

        <!-- Layout desktop: diseño original -->
        <div class="hidden md:flex flex-col items-end text-right">
          <span class="text-white leading-none font-black tracking-wider"
            >OCHO</span
          >
          <span class="text-secondary leading-none font-black tracking-wider"
            >TRES</span
          >
        </div>
        <div class="hidden md:flex flex-col items-start text-left">
          <span
            class="text-outline-white leading-none font-black tracking-wider block"
            >ISLAS</span
          >
          <span
            class="text-outline-primary leading-none font-black tracking-wider block"
            >COLORES</span
          >
        </div>
      </div>
    </h1>
    <div id="subtitle" class="flex flex-col items-center">
      <p class="text-md md:text-2xl">
        1º Equipo de Fórmula Student de Canarias
      </p>
      <Buttons
        buttons={buttons}
        buttonClass="join-item btn btn-primary btn-md md:btn-xl"
        className="join join-vertical md:join-horizontal mt-5 md:mt-6"
      />
    </div>
  </div>
</div>

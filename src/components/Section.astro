---
const { id, className = "", title, subtitle } = Astro.props;
---

<section
  id={id}
  class={"px-4 md:px-8 lg:px-16 xl:px-24 2xl:px-32 mt-5 gap-5 md:gap-10 md:mt-15 flex w-full flex-col lg:flex-row " + className}
>
  {title && <h2 class="text-2xl font-bold text-center">{title}</h2>}
  {subtitle && <p class="text-center mt-4">{subtitle}</p>}
  <slot />
</section>
